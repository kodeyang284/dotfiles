#!/bin/sh

intern=eDP-1
extern=DP-1

xrandr | grep -q "HDMI-1 connected" && extern=HDMI-1

if xrandr | grep -q "$extern disconnected"; then
  xrandr --output "$extern" --off --output "$intern" --auto
else
  xrandr --output "$intern" --off --output "$extern" --auto
fi

# change a to a extern monitor may cause wallpaper draw badlly, use feh automaticlly reload the wallpaper
[[ -f ~/.fehbg ]] && . ~/.fehbg
