#!/bin/sh

intern=eDP-1
extern=DP-1

xrandr | grep -q "HDMI-1 connected" && extern=HDMI-1

if xrandr | grep -q "$extern disconnected"; then
  xrandr --output "$extern" --off --output "$intern" --auto
else
  xrandr --output "$extern" --primary --auto --output "$intern" --left-of "$extern" --auto
fi

[[ -f ~/.fehbg ]] && . ~/.fehbg
