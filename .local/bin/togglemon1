#!/bin/sh

intern=eDP-1
extern=HDMI-1

xrandr | grep -q "DP-1 connected" && extern=DP-1

if xrandr | grep -q "$extern disconnected"; then
  sleep 2; xrandr --output "$extern" --off --output "$intern" --auto
else
  sleep 2; xrandr --output "$extern" --primary --auto --output "$intern" --auto --left-of "$extern" 
fi

[[ -f ~/.fehbg ]] && . ~/.fehbg
