#!/bin/sh

ICON="📢"
VOLUME=$(pactl get-sink-volume @DEFAULT_SINK@ | grep Volume | gawk '{print $5}')

if pactl get-sink-mute @DEFAULT_SINK@ | grep yes > /dev/null; then
  status="🔇"
else
  status=$(pactl get-sink-volume @DEFAULT_SINK@ | grep Volume | gawk '{print $5}')
fi

if pamixer --list-sinks | grep bluez_output >/dev/null ; then
  printf "🎧:%s\n" "$status"
else
  printf "$ICON:%s\n" "$status"
fi

